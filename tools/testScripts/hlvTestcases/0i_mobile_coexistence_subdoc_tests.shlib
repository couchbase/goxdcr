CLUSTER_NAME_PORT_MAP=(["C1"]=9000 ["C2"]=9001)

function reset {
	resetNode "C1"
	sleep 3
	resetNode "C2"
	sleep 3
}

function runSubdocTest {
	testNum=$1
	echo "Running subdoc test $testNum"
	testName="TestCasRollbackLWWMobileScenario$testNum"
	go test -timeout 120s -run $testName github.com/couchbase/goxdcr/v8/parts
	if (($? != 0)); then
		echo "failed subdoc test $testNum"
		exit 1
	fi
	reset
}

function runPVTests {
	echo "Running PV pruning tests"
	testName="TestPVPruning"
	go test -timeout 140s -run $testName github.com/couchbase/goxdcr/v8/parts
	if (($? != 0)); then
		echo "failed PV pruning tests"
		exit 1
	fi
	reset
}

function runTestCase {
	echo "============================================================================"
	echo "Running mobile coexistence subdoc test case + other go tests"
	echo "============================================================================"

	testForClusterRun
	if (($? != 0)); then
		exit $?
	fi

	# source and target docs are both not tombstones
	runSubdocTest 1

	# target doc is tombstone, but source doc is not
	runSubdocTest 2

	# source doc is tombstone, but target doc is not
	runSubdocTest 3

	# source and target docs are both tombstones
	runSubdocTest 4

	runPVTests

	echo "============================================================================"
	echo "Mobile coexistence subdoc test + other go tests case passed"
	echo "============================================================================"
}
